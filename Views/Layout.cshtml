@inherits UmbracoViewPage
@using Umbraco.Core.PropertyEditors
@using Models = Umbraco.Web.PublishedModels;

@{
    Layout = null;
    var site = Model.Root();
    var siteItem = site.Children.Where(s => s.IsVisible());

    var homePage = (Models.Home)Model.Root();
}
<!DOCTYPE HTML>
<html>
<head>
    <title>Welcome - UmbracoTV</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="" ~ /Design/css/main.css" />
    <ink rel="stylesheet" href="~/Design/css/backOfficeStyle" />

</head>

<body>

    <!-- Navigation -->
    <div class="container">
        <nav class="navbar navbar-expand navbar-light">
            <a class="navbar-brand " href="index.html">Home</a>
            <!-- Links -->
            <ul class="navbar-nav">
                @foreach (var item in siteItem
.Where(x =>
         x.HasProperty("nav_check")
      && x.GetProperty("nav_check").Value().Equals(true))


)
                {


                    <li class="nav-item (@item.IsAncestorOrSelf(Model)?" active": null)">
                        <a class="nav-link" href="@item.Url()">@item.Name</a>
                    </li>

                }
            </ul>



            @{
                var links = homePage.Home_navLink;
                if (links.Any())
                {
                    <ul class="navbar-nav">
                        @foreach (var link in links)


                        {
                            <li class="nav-item (@link.Name==Model.Name)?" active": null)">
                                <a class="nav-link"  target="_blank" href="@link.Url">@link.Name</a>
                            </li>

                        }
                    </ul>
                }
            }
        </nav>
    </div>



    <!-- This is where we're going to render our content -->

    <div class="container">
        @RenderBody()

    </div>


    <!-- Footer -->
    <div class="container-fluid footer">
        <div class="container">

            <div class="row section">

                <ul class="navbar-nav">
                    @foreach (var item in siteItem
.Where(x =>
x.HasProperty("nav_footer")
&& x.GetProperty("nav_footer").Value().Equals(true))

)
                    {
                        <li class="nav-item (@item.IsAncestorOrSelf(Model)?" active": null)">
                            <a class="nav-link" href="@item.Url()">@item.Name</a>
                        </li>

                    }
                </ul>
              
                <div class="text-center">
                    <img src="~/Design/images/arm_with_u_logo.png" class="img-fluid" alt="Arm with Umbraco Logo">
                </div>
            </div>

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</body>
</html>