@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Contact>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "Layout.cshtml";
}
<div class="row section">

    <!-- The Contact form -->
    @using (Html.BeginUmbracoForm("SubmitForm", "ContentForm", FormMethod.Post))
    {


<div class="col-md-6">
        <div class="contact-form">
            <div class="form-group">
                <label>Name</label>
                <input id="name" name="name" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="email" name="email" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Subject</label>
                <input id="subject" name="subject" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea id="message" name="message" class="form-control" rows="7"></textarea>
            </div>
            <input type="submit" class="btn btn-primary" value="Submit Button">
        </div>
    </div>      
    }

    <!-- Contact details -->
    <div class="col-md-6">
       @Model.Value("contact_content")
    </div>
</div>